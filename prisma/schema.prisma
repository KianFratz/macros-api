generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model User {
  id Int @id @default(autoincrement()) @map("users_id")
  name String @db.VarChar(100)
  email String @unique @db.VarChar(100)
  password String @db.VarChar(255)
  role String @default("user") @db.VarChar(50)
  createdAt DateTime @default(now()) @map("created_at")

  @@map("users")
}

model Category {
  id Int @id @default(autoincrement()) @map("category_id")
  name String @unique @db.VarChar(100)
  createdAt DateTime @default(now()) @map("created_at")

  foods Food[] // back relation

  @@map("category")
}

model Food {
  id Int @id @default(autoincrement()) @map("food_id")
  name String @db.VarChar(100)
  description String? @db.Text
  category_id Int @map("category_id")
  is_verified Boolean @default(false) 
  createdAt DateTime @default(now()) @map("created_at")

  category Category @relation(fields: [id], references: [ id ], onDelete: Cascade)

  // relation 
  nutritions Nutrition[]
  servings Serving[]

  @@map("food")
}

model Serving {
  id Int @id @default(autoincrement()) @map("serving_id")
  food_id Int @map("food_id")
  serving_name String @db.VarChar(100)
  grams Float
  createdAt DateTime @default(now()) @map("created_at")

  food Food @relation(fields: [food_id], references: [id], onDelete: Cascade)

  @@map("servings")
}

model Nutrition {
  id Int @id @default(autoincrement()) @map("nutrition_id")
  food_id Int @map("food_id")
  calories Float
  protein Float
  fat Float?
  fiber Float?
  sugar Float?
  sodium Float?
  carbs Float
  createdAt DateTime @default(now()) @map("created_at")

  food Food @relation(fields: [food_id], references: [ id ], onDelete: Cascade)

  @@map("nutrition")
}
